            android:name=".ConfirmAppointmentActivity"
            android:label="@string/title_activity_confirm_appointment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AppointmentCalendarActivity"
            android:label="@string/title_activity_appointment_calendar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ContactDetailsActivity"
            android:label="@string/title_activity_contact_details"
            android:screenOrientation="portrait" />
