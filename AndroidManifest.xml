            android:name=".TodayAppointmentActivity"
            android:label="@string/title_activity_today_appointment" />
        <activity
            android:name=".PostNatalActivity"
            android:label="@string/title_activity_post_natal" />
        <activity
            android:name=".AnteNatalActivity"
            android:label="@string/title_activity_anti_natal" />
        <activity
            android:name=".StockNoteActivity"
            android:label="@string/title_activity_stock_note" >

